@page "/counter"
@using AutoDeployApplication.Models;
@using Radzen.Blazor

<h1>Ask AI</h1>
<h8>Questions :</h8>
<InputText Style="width:1015px;margin-left: 5px;" @bind-Value="question"></InputText>
<br/>
<br/>
<RadzenButton Style="width:120px;margin-left: 500px;" 
    Text="ASK NOW" 
    Click="@Communicate">
</RadzenButton>
<br/>
<br/>
<br/>
<InputText Style="width:1100px;height:300px;margin-left: 5px;" 
    @bind-Value="generatedAnswer">
</InputText>




@code {
    private string question = "";
    private string generatedAnswer = "";


    private void Communicate()
    {
        OpenAIClient client = new OpenAIClient();
        generatedAnswer = client.GetAnswerQuestion(question);
    }
}
